/* pages/address/address.wxss */
.bgBox{
  background-color: #f5f5f7;float: left;width:100%;
}
.list{
  border-bottom: 1px solid #eeeeee;background-color: #fff;
   display: flex;
  position: relative;height: 70px;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
.left{
  float: left;
  width: calc(100% - 37px);margin-left: 16px;margin-top: 16px
}
.address{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
 font-size: 14px;color: #333333;line-height: 20px;max-height: 40px
}
.right{
  float: right;margin-right: 15px;line-height: 80px;width: 50px;
}
.right image{
 width: 17px;height: 17px;float: right;
margin-top: 26.5px;

}
.editAdress{
  position: fixed;bottom: 20px;height: 44px;display: block;float: left;width: 80%; background: rgb(202,162,132);text-align: center;line-height: 44px;color: #fff;font-size: 16px;border-radius: 3px;margin-left: 10%;
}
.del{
  width: 60px;
  display: flex;
  align-items: center;
  justify-content:space-between;
  position:absolute;
  top:21px;
  right:15px;
  z-index:999;
}
.name{
  margin-top: 5px;
  margin-bottom: 10px;color: #333333;
  font-size: 12px;
}