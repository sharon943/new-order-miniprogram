/* pages/person/person.wxss */
.bgBox{
  background-color: #f5f5f7;float: left;width: 100%
}
.add{
   width: 100%;height: 188px;background: white;margin-top: 5px;
}
.inputView{
  width: calc(100% - 16px);margin-left: 16px;line-height: 45px;height: 45px;border-bottom: 1px solid #eeeeee;float: left;background: white;color:#333333;
}
.inputView text{
  display: block;float: left;width: 70px;font-size: 14px;color: #333333;line-height: 45px;
}
.inputView input{
  width: calc(100% - 80px);line-height: 45px;height: 45px;font-size: 14px;color:#333333;
}

.inputView input ::placeholder{
  font-size: 14px;color: #cccccc;
}

.inputView image{
  height: 15px;width: 15px;
}
.section{
width: calc(100% - 70px) !important;
height: 100% !important;
margin-left: 70px;


  border: none !important;
}
.section text{
  height: 45px;line-height: 45px;margin-top: -45px;width: 100%;

}
.section picker {
  border: none !important;
  width: 100% !important;
   /* margin-top:-45px !important; */
   text-align: left !important;
   height: 100% !important;
}

.section picker view{
   height: 45px !important;
}

 #time{
  width:20px;
  height:20px;
  display:inline-block;
  overflow:hidden;
  right: -25px;
  margin-top:15px;
  position:absolute;
}
.picker{
  border: none;
z-index: 999999;
position: absolute;
height: 45px;
width: 100%;

}
.submit{
  height: 45px;
width: calc(100% - 40px);
text-align: center;
line-height: 45px;
margin-left: 20px;
background-color: rgb(202,162,132);
margin-top: 20px;
border-radius: 3px;
font-size: 16px;
color: #fff;

}
.nochange{
  background-color: #e7e7e7;
    height: 45px;
width: calc(100% - 40px);
text-align: center;
line-height: 45px;
margin-left: 20px;
margin-top: 20px;
border-radius: 3px;
font-size: 16px;
color: #fff;
  
}
.radio-group{
  height:45px;text-align:left;line-height:45px;margin-right:15px;
}
.radio-group label:nth-of-type(1){
  margin-right: 15px
